<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="28" author="AlexanderKeda">
        <createTable tableName="agreements_xml_export">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="agreement_uuid" type="CHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="already_exported" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="29" author="AlexanderKeda">
        <addForeignKeyConstraint baseTableName="agreements_xml_export"
                                 baseColumnNames="agreement_uuid"
                                 constraintName="fk_agreements_xml_export_agreement_uuid"
                                 referencedTableName="agreements"
                                 referencedColumnNames="uuid"/>
    </changeSet>

</databaseChangeLog>